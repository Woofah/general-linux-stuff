#Get disk names
sudo blkid
sudo blkid | grep UUID=

#Make dirs to mount drives to
mkdir VM
mkdir NOTPORN
mkdir TOTALLYNOTPORN

#SSD/HDD UUIDs
LABEL="VM" UUID="62880213-345b-4722-89cf-46f157d0b44e"

#Open fstab file
sudo gedit /etc/fstab

#Mount hdds and ssd
UUID=62880213-345b-4722-89cf-46f157d0b44e /home/ericparsley/VM    ext4    defaults    0    0


#Gain ownership of hdds and ssd
sudo chown -R -v ericparsley:ericparsley *
