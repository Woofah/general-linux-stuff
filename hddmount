#Get disk names
sudo blkid
sudo blkid | grep UUID=

#Make dirs to mount drives to
mkdir VM
mkdir NOTPORN
mkdir TOTALLYNOTPORN

#SSD/HDD UUIDs
LABEL="VM" UUID="5683e810-fd70-492f-b207-511ea5c2093d"

#Open fstab file
sudo nano /etc/fstab

#Mount hdds and ssd
UUID=5683e810-fd70-492f-b207-511ea5c2093d /home/ericparsley/VM    ext4    defaults    0    0


#Gain ownership of hdds and ssd
sudo chown -R -v ericparsley:ericparsley /home/ericparsley/VM
